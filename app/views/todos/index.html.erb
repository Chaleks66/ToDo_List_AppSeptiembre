<% @tasks.each_slice(3) do |tasks|%>
    <div class='row'>
    <% tasks.each do |task| %>
    <div class="card" style="width: 18rem;">
    <%= image_tag  task.pic, class: "card-img-top", style:'filter:grayscale(100%)' %>
      <div class="card-body">
        <h5 class="card-title"><%= task.name %></h5>
        <%= link_to  "Completar", todo_path(task), method: :patch %>
      </div>
    </div>
        <% end %>
        </div>
    <% end %>